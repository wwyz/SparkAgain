<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/notices"
            android:textSize="15sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/open_source_link1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_source_link" >
            </TextView>

            <TextView
                android:id="@+id/open_source_link2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_source_link" >
            </TextView>

            <TextView
                android:id="@+id/open_source_link3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_source_link"
                android:visibility="gone" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:background="#8b95a0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/apache_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="@string/apache_license" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/open_source_link4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_source_link" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jsoup_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:background="#8b95a0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jsoup_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="@string/apache_license" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/open_source_link5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_source_link" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:background="#8b95a0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/image_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:text="@string/apache_license" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>